---
const { title, image, description } = Astro.props;
const { items } = Astro.props;
---
<style>
  /* Custom styles for the carousel */
  .custom-carousel {
    width: 100%; /* Full width */
    max-height: 400px; /* Set a maximum height */
    overflow: hidden; /* Hide any overflow */
  }

  .custom-carousel img {
    height: 100%; /* Ensures image takes full height of the carousel */
    width: 100%; /* Ensures image takes full width of the carousel */
    object-fit: cover; /* Maintains aspect ratio while covering the carousel */
  }
/* Make the carousel control icons visible by overriding the background image */
.carousel-control-prev-icon,
.carousel-control-next-icon {
  background-image: none; /* Remove the default Bootstrap background SVG */
  background-color: white; /* Set a visible background color */
  width: 30px; /* Optional: control size */
  height: 30px; /* Optional: control size */
  border-radius: 50%; /* Optional: give a circular background */
}

.carousel-control-prev-icon::after {
  content: '\276E'; /* Unicode for left arrow */
  color: black; /* Arrow color */
  font-size: 20px; /* Arrow size */
}

.carousel-control-next-icon::after {
  content: '\276F'; /* Unicode for right arrow */
  color: black; /* Arrow color */
  font-size: 20px; /* Arrow size */
}

</style>
</div>
<div id="carouselExampleIndicators" class="carousel slide custom-carousel" data-bs-ride="carousel">
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="1" aria-label="Slide 2"></button>
      <button type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide-to="2" aria-label="Slide 3"></button>
    </div>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img src="../Images/The bear.jpeg" class="d-block w-50 mx-auto" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../Images/Euphoria.jpeg" class="d-block w-50 mx-auto" alt="...">
      </div>
      <div class="carousel-item">
        <img src="../Images/House of the Dragon.jpeg" class="d-block w-50 mx-auto" alt="...">
      </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
